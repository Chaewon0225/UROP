def cookingfail():
    global cookingFail, heartMeter, fridgeOverlayActive, fridge_rect, selected_sprite_filenames
    global current_target_index, removed_sprites_count, saved_locations
    print("start reset sequence")
    cookingFail = True
    heartMeter -= 1
    fridge_rect = Rect(0, 125, 198, 475)

    for _ in range(3): 
        for filename in selected_sprite_filenames:
            print(selected_sprite_filenames)
            print(saved_locations)
            sprite = next((sprite for sprite in scaled_food_group if sprite.filename == filename), None)
        if sprite:
            sprite.rect.x, sprite.rect.y = saved_locations.pop(-1)  # Pop the last saved position
            selected_sprite_filenames.remove(filename)

    current_target_index = 0
    removed_sprites_count = 0
    cookingFail = False
    fridgeOverlayActive = True  
    print("reset sequence complete")

def on_mouse_up():
    global draw_rectangles, fridgebarrieractive, choicebarrieractive, choice2barrieractive
    draw_rectangles = True  # Set flag to draw rectangles
    fridgebarrieractive = True
    choicebarrieractive = True
    choice2barrieractive = True


def on_key_down(key):
    global a_key_pressed
    if key == pygame.K_a:
        a_key_pressed = True
    global s_key_pressed
    if key == pygame.K_s:
        s_key_pressed = True
    global d_key_pressed
    if key == pygame.K_d:
        d_key_pressed = True
    global z_key_pressed
    if key == pygame.K_z:
        z_key_pressed = True
    global x_key_pressed
    if key == pygame.K_x:
        x_key_pressed = True
    global c_key_pressed
    if key == pygame.K_c:
        c_key_pressed = True
    global o_key_pressed
    if key == pygame.K_o:
        o_key_pressed = True
    global p_key_pressed
    if key == pygame.K_p:
        p_key_pressed = True

def on_key_up(key):
    global a_key_pressed
    if key == pygame.K_a:
        a_key_pressed = False
    global s_key_pressed
    if key == pygame.K_s:
        s_key_pressed = False
    global d_key_pressed
    if key == pygame.K_d:
        d_key_pressed = False
    global z_key_pressed
    if key == pygame.K_z:
        z_key_pressed = False
    global x_key_pressed
    if key == pygame.K_x:
        x_key_pressed = False
    global c_key_pressed
    if key == pygame.K_c:
        c_key_pressed = False
    global o_key_pressed
    if key == pygame.K_o:
        o_key_pressed = False
    global p_key_pressed
    if key == pygame.K_p:
        p_key_pressed = False

def update():
    global a_key_pressed
    global a_key_val
    global z_key_val
    global fridgebarrieractive, choicebarrieractive, choice2barrieractive
    if a_key_pressed and satiation_val < 60:
            # Extend the length of gauge1_rect when 'A' key is pressed
            gauge1_rect.width += 2.4
            a_key_val += 1
            z_key_val -= 1
            a_key_pressed = False
    global s_key_pressed
    global s_key_val
    global x_key_val
    if s_key_pressed and nutrition_val < 60:
            # Extend the length of gauge1_rect when 'A' key is pressed
            gauge2_rect.width += 2.4
            s_key_val += 1
            x_key_val -= 1
            s_key_pressed = False
    global d_key_pressed
    global d_key_val
    global c_key_val
    if d_key_pressed and satisfaction_val < 60:
            # Extend the length of gauge1_rect when 'A' key is pressed
            gauge3_rect.width += 2.4
            d_key_val += 1
            c_key_val -= 1
            d_key_pressed = False
    global z_key_pressed
    if z_key_pressed and z_key_val < 60 and a_key_val > 0:
            # Extend the length of gauge1_rect when 'A' key is pressed
            gauge1_rect.width -= 2.4
            a_key_val -= 1
            z_key_val += 1
            z_key_pressed = False
    global x_key_pressed
    if x_key_pressed and x_key_val < 60 and s_key_val > 0:
            # Extend the length of gauge1_rect when 'A' key is pressed
            gauge2_rect.width -= 2.4
            s_key_val -= 1
            x_key_val += 1
            x_key_pressed = False
    global c_key_pressed
    if c_key_pressed and c_key_val < 60 and d_key_val > 0:
            # Extend the length of gauge1_rect when 'A' key is pressed
            gauge3_rect.width -= 2.4
            d_key_val -= 1
            c_key_val += 1
            c_key_pressed = False
    global o_key_pressed, p_key_pressed,heartMeter
    if o_key_pressed and heartMeter < 5:
         heartMeter += 1
         o_key_pressed = False
    if p_key_pressed and heartMeter > 0:
         heartMeter -=1
         p_key_pressed = False

    if fridgebarrieractive == False:
        fridgebarrieractive = True
    if choicebarrieractive == False:
        choicebarrieractive = True
    if choice2barrieractive == False:
        choice2barrieractive = True


pgzrun.go()
