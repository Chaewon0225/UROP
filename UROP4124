images_rev = {v: k for k, v in images.items()}


for sprite, target_location in zip(sprites_in_hand, target_locations):
    sprite.rect.topleft = target_location


current_target_index = 0

location_picked = False
scale_factoreatingchoice = 0.13

def on_mouse_down(pos):
    global current_background, button_visible,draw_rectangles, foodCooked, scale_factoreatinglocation, eatinglocation1_image, eatinglocation1_rect, eatinglocation2_image, eatinglocation2_rect, eatinglocation3_image, eatinglocation3_rect
        
    if button_rect.collidepoint(pos) and button_visible:
        current_background = (current_background + 1) % len(background_images)
        button_visible = False  # Hide the button once it's pressed
    global fridge_rect
    global fridgeOverlayActive, fridgebarrieractive
    
    fridgebarrieractive = False
    if fridge_rect.collidepoint(pos):
        fridgebarrieractive = True

    if fridge_rect.collidepoint(pos) and draw_rectangles and button_visible == False: 
        fridgeOverlayActive = True
        fridge_rect = Rect(0, 0, 1, 1)
    
    if draw_rectangles and button_visible == False: 
        clicked_sprites = [sprite for sprite in scaled_food_group if sprite.rect.collidepoint(pos)]
        if len(saved_locations) < 3:
            saved_locations.extend([(sprite.rect.x, sprite.rect.y) for sprite in clicked_sprites])
        for sprite in clicked_sprites:
            if fridgeOverlayActive and button_visible == False and fridgebarrieractive == False:
                global removed_sprites_count, current_target_index
                if current_target_index < len(target_locations):
                    target_location = target_locations[current_target_index]
                    sprite.rect.x, sprite.rect.y = target_location
                    current_target_index += 1
                    removed_sprites_count += 1
                    filename = sprite.filename  # Access the stored filename
                    selected_sprite_filenames.append(filename)
                    print(selected_sprite_filenames)
                    print(saved_locations)

    if cook_rect.collidepoint(pos):
        recipies()
    
    if foodCooked:
        global scale_factoreatinglocation, eatinglocation1_image, eatinglocation1_rect, eatinglocation2_image, eatinglocation2_rect, eatinglocation3_image, eatinglocation3_rect, location_picked
        global eatingchoice1_image, eatingchoice2_image, eatingchoice3_image, eatingchoice4_image, eatingchoice1_rect, eatingchoice2_rect, eatingchoice3_rect, eatingchoice4_rect, scale_factoreatingchoice
        global satisfaction_val, satiation_val
        global choicebarrieractive, choice2barrieractive

        scale_factoreatinglocation = 0.15
        eatinglocation1_image = pygame.image.load("bedroom.png")
        eatinglocation1_image = pygame.transform.scale(eatinglocation1_image, (int(eatinglocation1_image.get_width() * scale_factoreatinglocation), int(eatinglocation1_image.get_height() * scale_factoreatinglocation)))
        eatinglocation1_rect = Rect(225, 200, 100, 100)

        eatinglocation2_image = pygame.image.load("diningtable.png")
        eatinglocation2_image = pygame.transform.scale(eatinglocation2_image, (int(eatinglocation2_image.get_width() * scale_factoreatinglocation), int(eatinglocation2_image.get_height() * scale_factoreatinglocation)))
        eatinglocation2_rect = Rect(425, 200, 100, 100)

        eatinglocation3_image = pygame.image.load("livingroom.png")
        eatinglocation3_image = pygame.transform.scale(eatinglocation3_image, (int(eatinglocation3_image.get_width() * scale_factoreatinglocation), int(eatinglocation3_image.get_height() * scale_factoreatinglocation)))
        eatinglocation3_rect = Rect(625, 200, 100, 100)

        choicebarrieractive = False
        
        if eatinglocation1_rect.collidepoint(pos) and choicebarrieractive == False:
            current_background = 2
            foodCooked = False

            location_picked = True
            gauge3_rect.width += 4.8
            satisfaction_val += 2
            
            eatingchoice1_image = pygame.image.load("bedroom - focusing on eating.png")
            eatingchoice1_image = pygame.transform.scale(eatingchoice1_image, (int(eatingchoice1_image.get_width() * scale_factoreatingchoice), int(eatingchoice1_image.get_height() * scale_factoreatingchoice)))
            eatingchoice1_rect = Rect(225, 200, 100, 100)

            eatingchoice2_image = pygame.image.load("bedroom - listening to loud music.png")
            eatingchoice2_image = pygame.transform.scale(eatingchoice2_image, (int(eatingchoice2_image.get_width() * scale_factoreatingchoice), int(eatingchoice2_image.get_height() * scale_factoreatingchoice)))
            eatingchoice2_rect = Rect(365, 200, 100, 100)

            eatingchoice3_image = pygame.image.load("bedroom - scrolling through phone.png")
            eatingchoice3_image = pygame.transform.scale(eatingchoice3_image, (int(eatingchoice3_image.get_width() * scale_factoreatingchoice), int(eatingchoice3_image.get_height() * scale_factoreatingchoice)))
            eatingchoice3_rect = Rect(505, 200, 100, 100)

            eatingchoice4_image = pygame.image.load("bedroom - watching tv.png")
            eatingchoice4_image = pygame.transform.scale(eatingchoice4_image, (int(eatingchoice4_image.get_width() * scale_factoreatingchoice), int(eatingchoice4_image.get_height() * scale_factoreatingchoice)))
            eatingchoice4_rect = Rect(645, 200, 100, 100)
            
            choice2barrieractive = False

            if eatingchoice1_rect.collidepoint(pos) and choice2barrieractive == False:
                current_background = 5
                location_picked = False

                gauge1_rect.width += 4.8
                satiation_val += 2
                gauge3_rect.width += 7.2
                satisfaction_val += 3

            elif eatingchoice2_rect.collidepoint(pos) and choice2barrieractive == False:
                current_background = 6
                location_picked = False
                
            elif eatingchoice3_rect.collidepoint(pos) and choice2barrieractive == False:
                current_background = 7
                location_picked = False

                gauge1_rect.width += 2.4
                satiation_val += 1
                gauge3_rect.width += 2.4
                satisfaction_val += 1
            elif eatingchoice4_rect.collidepoint(pos) and choice2barrieractive == False:
                current_background = 8
                location_picked = False    

                gauge1_rect.width += 2.4
                satiation_val += 1
                gauge3_rect.width += 2.4
                satisfaction_val += 1

        if eatinglocation2_rect.collidepoint(pos) and choicebarrieractive == False:
            current_background = 3
            foodCooked = False
            location_picked = True

            choicebarrieractive = False

            gauge3_rect.width += 2.4
            satisfaction_val += 1

            eatingchoice1_image = pygame.image.load("dining table - focusing on eating.png")
            eatingchoice1_image = pygame.transform.scale(eatingchoice1_image, (int(eatingchoice1_image.get_width() * scale_factoreatingchoice), int(eatingchoice1_image.get_height() * scale_factoreatingchoice)))
            eatingchoice1_rect = Rect(225, 200, 100, 100)

            eatingchoice2_image = pygame.image.load("dining table - listening to loud music.png")
            eatingchoice2_image = pygame.transform.scale(eatingchoice2_image, (int(eatingchoice2_image.get_width() * scale_factoreatingchoice), int(eatingchoice2_image.get_height() * scale_factoreatingchoice)))
            eatingchoice2_rect = Rect(365, 200, 100, 100)

            eatingchoice3_image = pygame.image.load("dining table - scrolling through phone.png")
            eatingchoice3_image = pygame.transform.scale(eatingchoice3_image, (int(eatingchoice3_image.get_width() * scale_factoreatingchoice), int(eatingchoice3_image.get_height() * scale_factoreatingchoice)))
            eatingchoice3_rect = Rect(505, 200, 100, 100)

            eatingchoice4_image = pygame.image.load("dining table - watching tv.png")
            eatingchoice4_image = pygame.transform.scale(eatingchoice4_image, (int(eatingchoice4_image.get_width() * scale_factoreatingchoice), int(eatingchoice4_image.get_height() * scale_factoreatingchoice)))
            eatingchoice4_rect = Rect(645, 200, 100, 100)

            choice2barrieractive = False

            if eatingchoice1_rect.collidepoint(pos) and choice2barrieractive == False:
                current_background = 9
                location_picked = False

                gauge1_rect.width += 4.8
                satiation_val += 2
                gauge3_rect.width += 7.2
                satisfaction_val += 3
            elif eatingchoice2_rect.collidepoint(pos) and choice2barrieractive == False:
